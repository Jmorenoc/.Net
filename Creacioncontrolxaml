<script language="javascript" type="text/javascript">
    function CheckAll(obj) {
        var gv = document.getElementById('<%=GrillaItems.ClientID %>');
        for (var i = 0; i < gv.all.length; i++) {
            var nodo = gv.all[i];
            nodo.checked = obj.checked;
        }
    }
</script>

